{% include 'header.twig' %}

{% block content %}
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <form method="post" action="edit_phone.php" style="width: 50%;">
            <input type="hidden" name="phone_id" value="{{ phone.getId() }}">

            <div class="form-group">
                <label for="brand">Brand:</label>
                <input type="text" class="form-control" id="brand" name="brand" value="{{ phone.getBrand() }}" required>
            </div>

            <div class="form-group">
                <label for="model">Model:</label>
                <input type="text" class="form-control" id="model" name="model" value="{{ phone.getModel() }}" required>
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <input type="number" class="form-control" id="price" name="price" value="{{ phone.getPrice() }}" required>
            </div>

            <div class="form-group">
                <label for="availability">Availability:</label>
                <select class="form-control" id="availability" name="availability" required>
                    <option value="true" {% if phone.getAvailability() == true %}selected{% endif %}>Available</option>
                    <option value="false" {% if phone.getAvailability() == false %}selected{% endif %}>Unavailable</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
{% endblock %}